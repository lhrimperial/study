<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.githup.study.security.shiro.web.mapper.PermsMapper">

    <resultMap id="BaseResultMap" type="com.githup.study.security.shiro.web.domain.PermsPO">
        <result column="treeId" property="treeId"/>
        <result column="title" property="title"/>
        <result column="desc" property="desc"/>
        <result column="parentId" property="parentId"/>
        <result column="url" property="url"/>
        <result column="perms" property="perms"/>
        <result column="type" property="type"/>
        <result column="order" property="order"/>
    </resultMap>

    <update id="update" parameterType="com.githup.study.security.shiro.web.domain.PermsPO">
        update t_tree
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="desc != null and desc != ''">
                desc = #{desc},
            </if>
            <if test="parentId != null">
                parentId = #{parentId},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="perms != null and perms != ''">
                perms = #{perms},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="order != null">
                order = #{order},
            </if>
        </set>
        where treeId = #{treeId}
    </update>

</mapper>